.container {
  width: 100vw;
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

van-icon {
  vertical-align: middle;
}

page {
  font-family: Helvetica;
  box-sizing: border-box;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

  --font-size-XL: 70rpx;
  --font-size-L: 50rpx;
  --font-size-M: 35rpx;
  --font-size-S: 24rpx;
  --font-size-XS: 20rpx;

  --color-theme: #3D78FF;
}