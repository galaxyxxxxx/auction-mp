.container {
  background-color: #EEEEEE;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* poster */
.poster-wrapper,
.poster,
.poster image {
  width: 750rpx;
  height: 758rpx;
  position: relative;
}

.poster-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

.poster {
  position: absolute;
}

.id,
.auction-count {
  position: absolute;
  z-index: 10;
}

.logo-auction {
  z-index: 10;
}

.logo-auction,
.logo-auction image {
  width: 200rpx;
  height: 176rpx;
}

.id {
  z-index: 20;
  position: absolute;
  left: 40rpx;
  bottom: 18rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--green-light);
  color: #FFFFFF;
  font-weight: bold;
  line-height: 42rpx;
  font-size: 32rpx;
}

.auction-count {
  z-index: 10;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 68rpx;
  box-sizing: border-box;
  padding-right: 24rpx;
  background: rgba(0, 0, 0, 0.8);
  color: #FFFFFF;
  font-size: 28rpx;
  line-height: 32rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* content */
.content-wrapper {
  width: 750rpx;
  height: 82rpx;
  box-sizing: border-box;
  padding: 0 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #FFFFFF;
}

.painting-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.painting-name {
  color: var(--gray-text);
  font-weight: bold;
  font-size: 32rpx;
  line-height: 42rpx;
}

.painting-status {
  display: flex;
  height: 32rpx;
  align-items: center;
  color: var(--gray-text);
  font-size: 32rpx;
  line-height: 42rpx;
}

.count-down {
  color: var(--red-text);
  font-size: 32rpx;
  line-height: 42rpx;
}

.painting-author {
  color: var(--gray-text);
  font-size: 32rpx;
  line-height: 42rpx;
  opacity: 0.4;
  margin-left: 16rpx;
}

/* price-list */
.price-list {
  width: 750rpx;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 12rpx;
  background-color: #FFFFFF;
}

.price-item {
  width: 674rpx;
  height: 80rpx;
  margin: 22rpx auto;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

.buyer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.avatar,
.avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.name {
  margin-left: 22rpx;
  color: var(--gray-text);
  font-size: 24rpx;
  line-height: 32rpx;
  opacity: 0.6;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--red-text);
  line-height: 38rpx;

  display: flex;
  align-items: center;
}

.top-price {
  width: 112rpx;
  height: 40rpx;
  background: #FEF38F;
  border-radius: 38rpx;

  display: flex;
  justify-content: center;
  align-items: center;

  color: #D66000;
  font-size: 20rpx;
  line-height: 28rpx;

  margin-right: 16rpx;
  font-weight: normal;
}

.control-bar {
  width: 750rpx;
  height: 126rpx;
  box-sizing: border-box;
  padding: 0 28rpx;
  /* position: fixed;
  bottom: 0; */
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.control-bar {
  height: calc(126rpx + constant(safe-area-inset-bottom));
  padding-bottom: constant(safe-area-inset-bottom);
  /*兼容 IOS<11.2*/
  height: calc(126rpx + env(safe-area-inset-bottom));
  padding-bottom: env(safe-area-inset-bottom);
  /*兼容 IOS>11.2*/
}

.price-prefix {
  font-size: 28rpx;
  vertical-align: bottom;
}

.price-title {
  font-size: 20rpx;
  color: var(--gray-text);
  line-height: 28rpx;
  opacity: 0.4;
}

.button {
  width: 188rpx;
  height: 80rpx;
  background: linear-gradient(to right, rgb(255, 96, 52), rgb(238, 10, 36));
  border-radius: 40rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  line-height: 32rpx;

  display: flex;
  justify-content: center;
  align-items: center;

  margin-left: 16rpx;
}

.button-myprice {
  width: 234rpx;
  color: var(--gray-text);
  background: #FEF38F;
}

.button-auctioned {
  background: #858585;
}

.buttons-wrapper {
  display: flex;
  align-items: center;
}

.tips {
  color: var(--gray-text);
  font-size: 20rpx;
  line-height: 28rpx;
  letter-spacing: 0;
}