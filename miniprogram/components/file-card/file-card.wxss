.card {
  width: 88vw;
  height: 136rpx;

  display: flex;
  justify-content: space-between;
  align-items: center;

  margin: 0 auto;
  padding: 20rpx 0 10rpx 0;
  box-sizing: border-box;

  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

  border-bottom: 2rpx solid var(--color-border);

}


.icon , .icon image{
  width: 76rpx;
  height: 76rpx;

  display: flex;
  justify-content: center;
  align-items: center;

  margin-right: 24rpx;
}


.content {  
  height: 76rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 28rpx;
  color: #000000;
  line-height: 36rpx;
  letter-spacing: 2rpx;
  align-self: start;
}

.detail {
  width: 100%;
  height: 30rpx;
  display: flex;
  justify-content: start;
  align-items: center;

  font-size: 24rpx;
  color: var(--color-gray);
}

.storage {
  margin-left: 2vw;
}

.update-date {
  margin-right: 2vw;
}

.status image{
  width: 32rpx;
  height: 32rpx;
  object-fit: cover;
}